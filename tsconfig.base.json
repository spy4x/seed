{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@seed/back/api/core": ["libs/back/api/core/src/index.ts"],
      "@seed/back/api/notifications": ["libs/back/api/notifications/src/index.ts"],
      "@seed/back/api/shared": ["libs/back/api/shared/src/index.ts"],
      "@seed/back/api/user-devices": ["libs/back/api/user-devices/src/index.ts"],
      "@seed/back/api/users": ["libs/back/api/users/src/index.ts"],
      "@seed/e2e/shared/auth": ["libs/e2e/shared/auth/src/index.ts"],
      "@seed/front/admin/auth": ["libs/front/admin/auth/src/index.ts"],
      "@seed/front/admin/core": ["libs/front/admin/core/src/index.ts"],
      "@seed/front/admin/profile": ["libs/front/admin/profile/src/index.ts"],
      "@seed/front/admin/users": ["libs/front/admin/users/src/index.ts"],
      "@seed/front/shared/auth/container": ["libs/front/shared/auth/container/src/index.ts"],
      "@seed/front/shared/auth/guards": ["libs/front/shared/auth/guards/src/index.ts"],
      "@seed/front/shared/auth/state": ["libs/front/shared/auth/state/src/index.ts"],
      "@seed/front/shared/auth/ui": ["libs/front/shared/auth/ui/src/index.ts"],
      "@seed/front/shared/router": ["libs/front/shared/router/src/index.ts"],
      "@seed/front/shared/styles": ["libs/front/shared/styles/src/index.ts"],
      "@seed/front/shared/types": ["libs/front/shared/types/src/index.ts"],
      "@seed/front/shared/ui": ["libs/front/shared/ui/src/index.ts"],
      "@seed/front/web/auth": ["libs/front/web/auth/src/index.ts"],
      "@seed/front/web/core": ["libs/front/web/core/src/index.ts"],
      "@seed/front/web/profile": ["libs/front/web/profile/src/index.ts"],
      "@seed/shared/constants": ["libs/shared/constants/src/index.ts"],
      "@seed/shared/helpers": ["libs/shared/helpers/src/index.ts"],
      "@seed/shared/mock-data": ["libs/shared/mock-data/src/index.ts"],
      "@seed/shared/types": ["libs/shared/types/src/index.ts"]
    },
    "strict": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": ["node_modules", "tmp"],
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true,
    "types": ["node"]
  }
}
